#include <stdio.h>
#include <string.h>

char MedicineName[100][30];
int MedicineDetail[100][2], NoOfMedicine = 0;

char CustomerName[100][30];
int CustomerDetail[100][2], NoOfCustomer = 0;

void AddMedicine(int Id, char Name[], int Quantity){
    int x = 0, Flag = 0;
    while(x < NoOfMedicine){
        if(MedicineDetail[x][0] == Id){
            Flag = 1;
            break;
        }
        x++;
    }
    if(Flag){
        printf("This medicine already exists in the inventory\n");
    }
    else{
        MedicineDetail[NoOfMedicine][0] = Id;
        MedicineDetail[NoOfMedicine][1] = Quantity;
        strcpy(MedicineName[NoOfMedicine], Name);
        NoOfMedicine++;
        printf("New medicine added successfully\n");
    }
}

void AddCustomer(int Id, char Name[], int Contact){
    int x = 0, Flag = 0;
    while(x < NoOfCustomer){
        if(CustomerDetail[x][0] == Id){
            Flag = 1;
            break;
        }
        x++;
    }
    if(Flag){
        printf("This customer already exists in the records\n");
    }
    else{
        CustomerDetail[NoOfCustomer][0] = Id;
        CustomerDetail[NoOfCustomer][1] = Contact;
        strcpy(CustomerName[NoOfCustomer], Name);
        NoOfCustomer++;
        printf("New customer added successfully\n");
    }
}

int main(){
    int id, quantity, contact;
    char name[30];
    
    printf("Enter Medicine Details (ID Name Quantity): \n");
    scanf("%d %s %d", &id, name, &quantity);
    AddMedicine(id, name, quantity);
    
    printf("\nEnter Customer Details (ID Name Contact): \n");
    scanf("%d %s %d", &id, name, &contact);
    AddCustomer(id, name, contact);
    
    return 0;
}
